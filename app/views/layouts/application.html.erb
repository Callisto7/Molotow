<!DOCTYPE html>
<html>
  <head>
    <title>Molotow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
       <div class="container-fluid col-10 ">
       <a class="navbar-brand" href="/">Molotow</a>
       <button class="navbar-toggler" type="button" data-toggle="collapse"
                                                    data-target="#navbarText"
                                                    aria-controls="navbarText"
                                                    aria-expanded="false"
                                                    aria-label="Toggle navigation">
                                                    <span class="navbar-toggler-icon"></span>
       </button>
         <div class="collapse navbar-collapse" id="navbarText">
           <ul class="navbar-nav mr-auto">
             <li class="nav-item">
             </li>
           </ul>
              <!--<%= link_to 'Новая статья', new_post_path, class: 'btn btn-outline-light my-2 my-sm-0' %>-->
           <ul class="navbar-nav pull-xs-right">
           <% if user_signed_in? %>
             <li class="nav-item">
               <%= link_to 'Выход', destro_user_session_path, method: :delete, class: 'nav-link' %>
             </li>
           <% else %>
             <li class="nav-item">
               <%= link_to 'Вход', new_user_session_path, class: 'nav-link'%>
             </li>
             <li class="nav-item">
               <%= link_to 'Регистрация', new_user_registration_path, class: 'nav-link' %>
             </li>
           <% end %>
           </ul>
         </div>
       </div>
     </nav>

   </div>
   <div class="container-fluid wrapper col-10">
     <div class="row">
       <div class="col-md-12">
       <% flash.each do |name, message| %>
         <div class="alert alert-<% bootstrap_class_for(name) %>success">
           <button class="close" data-dismiss="alert">&times;</button>
           <%= message %>
         </div>
       <% end %>
       </div>
     </div>
     <%= yield %>
   </div>
  </body>
</html>
